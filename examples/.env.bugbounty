# Aether AI v0.9.0 - Bug Bounty Hunter Configuration
# Optimized for professional bug bounty hunting

# ═══════════════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════════════
APP_NAME=Aether AI
APP_VERSION=0.9.0
ENVIRONMENT=production

# ═══════════════════════════════════════════════════════
# API SERVER
# ═══════════════════════════════════════════════════════
API_HOST=127.0.0.1
API_PORT=8000

# ═══════════════════════════════════════════════════════
# AI PROVIDERS (Add your keys here)
# ═══════════════════════════════════════════════════════
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GROQ_API_KEY=gsk_your-groq-key

# AI Routing - Optimized for security work
AI_PROVIDER=auto
DEFAULT_MODEL=gpt-4-turbo-preview
FALLBACK_PROVIDER=groq
ENABLE_COST_TRACKING=true
MAX_COST_PER_DAY_USD=20.0

# Task Routing
ROUTER_CONVERSATION=groq
ROUTER_ANALYSIS=claude  # Best for vulnerability analysis
ROUTER_CODE=gpt-4  # Best for PoC generation
ROUTER_CREATIVE=gemini
ROUTER_FAST=groq

# ═══════════════════════════════════════════════════════
# VOICE (Optional for bug bounty)
# ═══════════════════════════════════════════════════════
WAKE_WORD=hey aether
VOICE_INPUT_ENABLED=false
VOICE_OUTPUT_ENABLED=false

# ═══════════════════════════════════════════════════════
# MEMORY & LLM
# ═══════════════════════════════════════════════════════
CHROMADB_PATH=./data/chromadb
CONVERSATION_HISTORY_DB=./data/conversations.db
MAX_CONTEXT_MESSAGES=10
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ═══════════════════════════════════════════════════════
# SECURITY
# ═══════════════════════════════════════════════════════
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ═══════════════════════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════════════════════
LOG_LEVEL=INFO
LOG_FILE=./logs/aether.log

# ═══════════════════════════════════════════════════════
# v0.9.0 FEATURES - BUG BOUNTY FOCUSED
# ═══════════════════════════════════════════════════════

# Screen Monitoring - ENABLE for context awareness
ENABLE_SCREEN_MONITORING=true
SCREEN_CAPTURE_INTERVAL=30
SCREEN_MONITOR_SAVE_SCREENSHOTS=true  # For reports
SCREEN_MONITOR_DATA_PATH=./data/monitoring

# Proactive AI - ENABLE for suggestions
ENABLE_PROACTIVE_MODE=true
PROACTIVE_CHECK_INTERVAL=1800  # 30 minutes
PROACTIVE_MORNING_GREETING=true
PROACTIVE_DAILY_PLANNING=true
PROACTIVE_SUGGESTION_TYPES=bug_bounty,breaks,learning

# PC Control - ENABLE for automation (use carefully!)
ENABLE_PC_CONTROL=true
PC_CONTROL_REQUIRE_CONFIRMATION=true  # KEEP THIS TRUE!
PC_CONTROL_ALLOWED_ACTIONS=mouse_click,keyboard_type,app_launch,app_close
PC_CONTROL_AUDIT_LOG=./data/control_audit.log

# Bug Bounty Autopilot - MAIN FEATURE
ENABLE_BUGBOUNTY_AUTOPILOT=true
BURPSUITE_API_URL=http://127.0.0.1:1337
BURPSUITE_API_KEY=your-burp-api-key-here
BUGBOUNTY_AUTO_SCAN=false  # Manual trigger recommended
BUGBOUNTY_TARGET_PROGRAMS=apple,google,microsoft,facebook,netflix,shopify
BUGBOUNTY_REPORT_PATH=./data/bugbounty_reports

# Personality - Friendly but focused
PERSONALITY_MODE=friendly
PERSONALITY_ENABLE_HINDI_ENGLISH=true
PERSONALITY_EMOJI_ENABLED=true
PERSONALITY_MOTIVATIONAL_ENABLED=true
PERSONALITY_HUMOR_ENABLED=false  # Focus on work

# Daily Intelligence - Track earnings and trends
ENABLE_DAILY_REPORTS=true
DAILY_REPORT_TIME=20:00
DAILY_REPORT_PATH=./data/daily_reports
ENABLE_TREND_ANALYSIS=true
ENABLE_WEALTH_TRACKING=true
