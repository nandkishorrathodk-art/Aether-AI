# Aether AI v0.9.0 - General Assistant Configuration
# Optimized for daily productivity and assistance

# ═══════════════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════════════
APP_NAME=Aether AI
APP_VERSION=0.9.0
ENVIRONMENT=production

# ═══════════════════════════════════════════════════════
# API SERVER
# ═══════════════════════════════════════════════════════
API_HOST=127.0.0.1
API_PORT=8000

# ═══════════════════════════════════════════════════════
# AI PROVIDERS (Add your keys here)
# ═══════════════════════════════════════════════════════
OPENAI_API_KEY=sk-your-openai-key
GROQ_API_KEY=gsk_your-groq-key  # FREE tier available!

# AI Routing - Balanced for general use
AI_PROVIDER=auto
DEFAULT_MODEL=gpt-4-turbo-preview
FALLBACK_PROVIDER=groq
ENABLE_COST_TRACKING=true
MAX_COST_PER_DAY_USD=5.0  # Conservative limit

# Task Routing
ROUTER_CONVERSATION=groq  # Fast and free
ROUTER_ANALYSIS=gpt-4
ROUTER_CODE=gpt-4
ROUTER_CREATIVE=gpt-4
ROUTER_FAST=groq

# ═══════════════════════════════════════════════════════
# VOICE
# ═══════════════════════════════════════════════════════
WAKE_WORD=hey aether
VOICE_INPUT_ENABLED=true
VOICE_OUTPUT_ENABLED=true
VOICE_GENDER=female
VOICE_PROVIDER=openai

# ═══════════════════════════════════════════════════════
# MEMORY & LLM
# ═══════════════════════════════════════════════════════
CHROMADB_PATH=./data/chromadb
CONVERSATION_HISTORY_DB=./data/conversations.db
MAX_CONTEXT_MESSAGES=10
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ═══════════════════════════════════════════════════════
# SECURITY
# ═══════════════════════════════════════════════════════
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ═══════════════════════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════════════════════
LOG_LEVEL=INFO
LOG_FILE=./logs/aether.log

# ═══════════════════════════════════════════════════════
# v0.9.0 FEATURES - GENERAL ASSISTANT
# ═══════════════════════════════════════════════════════

# Screen Monitoring - DISABLE for privacy
ENABLE_SCREEN_MONITORING=false

# Proactive AI - ENABLE for helpful suggestions
ENABLE_PROACTIVE_MODE=true
PROACTIVE_CHECK_INTERVAL=3600  # 1 hour (less frequent)
PROACTIVE_MORNING_GREETING=true
PROACTIVE_DAILY_PLANNING=true
PROACTIVE_SUGGESTION_TYPES=youtube,breaks,learning  # No bug bounty

# PC Control - DISABLE for safety
ENABLE_PC_CONTROL=false

# Bug Bounty Autopilot - DISABLE
ENABLE_BUGBOUNTY_AUTOPILOT=false

# Personality - Full friendly mode
PERSONALITY_MODE=friendly
PERSONALITY_ENABLE_HINDI_ENGLISH=true
PERSONALITY_EMOJI_ENABLED=true
PERSONALITY_MOTIVATIONAL_ENABLED=true
PERSONALITY_HUMOR_ENABLED=true

# Daily Intelligence - General productivity
ENABLE_DAILY_REPORTS=true
DAILY_REPORT_TIME=20:00
DAILY_REPORT_PATH=./data/daily_reports
ENABLE_TREND_ANALYSIS=true
ENABLE_WEALTH_TRACKING=false  # Not needed for general use
