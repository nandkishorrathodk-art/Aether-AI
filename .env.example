# =============================================
# AETHER AI v2.0 - CONFIGURATION
# =============================================

# Application Settings
APP_NAME=Aether AI
APP_VERSION=2.0.0
ENVIRONMENT=development

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-gemini-key-here
GROQ_API_KEY=your-groq-api-key-here
FIREWORKS_API_KEY=your-fireworks-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Aether Brain - Web Search Tool (Get free key: https://tavily.com)
TAVILY_API_KEY=your-tavily-api-key-here

# AI Provider Settings
AI_PROVIDER=auto
DEFAULT_MODEL=gpt-4-turbo-preview
FALLBACK_PROVIDER=groq
ENABLE_COST_TRACKING=true
MAX_COST_PER_DAY_USD=10.0

# Model Routing (task-type to preferred provider)
ROUTER_CONVERSATION=groq
ROUTER_ANALYSIS=claude
ROUTER_CODE=gpt-4
ROUTER_CREATIVE=gemini
ROUTER_FAST=groq
ROUTER_VISION=gpt-4-vision

# Voice Settings - Natural Human Voice
WAKE_WORD=hey aether
VOICE_INPUT_ENABLED=true
VOICE_OUTPUT_ENABLED=true
VOICE_GENDER=female
VOICE_PROVIDER=edge
VOICE_NAME=en-IN-NeerjaNeural
VOICE_RATE=165
TTS_MODEL=tts-1
STT_MODEL=whisper-1

# Memory Settings
CHROMADB_PATH=./data/memory/chroma
CONVERSATION_HISTORY_DB=./data/conversations.db
MAX_CONTEXT_MESSAGES=10
ENABLE_LONG_TERM_MEMORY=true

# Aether Brain Settings (v3.0.3) - Jarvis-like Intelligence
AETHER_BRAIN_ENABLED=true
AETHER_USER_NAME=Boss
AETHER_ENABLE_WEB_SEARCH=true
AETHER_ENABLE_FILE_OPS=true
AETHER_ENABLE_CODE_EXEC=true
AETHER_AUTO_USE_TOOLS=true

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TOP_P=0.9

# =============================================
# SECURITY SETTINGS (CRITICAL!)
# =============================================

# API Secret Key - MUST be changed in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
AETHER_SECRET_KEY=your-super-secret-random-key-here-change-in-production

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/aether.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Features
ENABLE_AUTOMATION=true
ENABLE_ANALYTICS=true
ENABLE_TELEMETRY=false

# v0.9.0 - Screen Monitoring
ENABLE_SCREEN_MONITORING=false
SCREEN_CAPTURE_INTERVAL=30
SCREEN_MONITOR_SAVE_SCREENSHOTS=false
SCREEN_MONITOR_DATA_PATH=./data/monitoring

# v0.9.0 - Proactive AI
ENABLE_PROACTIVE_MODE=true
PROACTIVE_CHECK_INTERVAL=1800
PROACTIVE_MORNING_GREETING=true
PROACTIVE_DAILY_PLANNING=true
PROACTIVE_SUGGESTION_TYPES=bug_bounty,youtube,breaks,learning

# v0.9.0 - PC Control
ENABLE_PC_CONTROL=false
PC_CONTROL_REQUIRE_CONFIRMATION=true
PC_CONTROL_ALLOWED_ACTIONS=mouse_click,keyboard_type,app_launch
PC_CONTROL_AUDIT_LOG=./data/control_audit.log

# v0.9.0 - Bug Bounty Autopilot
ENABLE_BUGBOUNTY_AUTOPILOT=false
BURPSUITE_API_URL=http://127.0.0.1:1337
BURPSUITE_API_KEY=your-burp-api-key-here
BUGBOUNTY_AUTO_SCAN=false
BUGBOUNTY_TARGET_PROGRAMS=apple,google,microsoft
BUGBOUNTY_REPORT_PATH=./data/bugbounty_reports

# v1.0.0 - Bug Bounty Platform API Credentials (Auto-Submit Feature)
# HackerOne: Get credentials from https://hackerone.com/settings/api_token
HACKERONE_USERNAME=your-hackerone-username
HACKERONE_API_TOKEN=your-hackerone-api-token

# Bugcrowd: Get API key from https://bugcrowd.com/user/edit
BUGCROWD_EMAIL=your-bugcrowd-email
BUGCROWD_API_KEY=your-bugcrowd-api-key

# Intigriti: Get API token from https://app.intigriti.com/researcher/profile
INTIGRITI_API_TOKEN=your-intigriti-api-token

# YesWeHack: Get API token from https://yeswehack.com/user/settings/api
YESWEHACK_API_TOKEN=your-yeswehack-api-token

# ====================================
# v1.0.0 - Self-Improvement & Learning
# ====================================

# Enable daily auto-upgrade system
ENABLE_SELF_IMPROVEMENT=true
SELF_IMPROVEMENT_SCHEDULE=daily  # daily, weekly, manual
SELF_IMPROVEMENT_TIME=03:00  # Run at 3 AM

# User learning from interactions
ENABLE_USER_LEARNING=true

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_METRICS_INTERVAL=300  # Save metrics every 5 minutes

# Safety settings
AUTO_APPLY_SAFE_IMPROVEMENTS=true  # Auto-apply safe improvements
REQUIRE_APPROVAL_FOR_MAJOR_CHANGES=true  # Ask before major changes
IMPROVEMENT_BACKUP_RETENTION_DAYS=30  # Keep backups for 30 days

# v0.9.0 - Personality & Language
PERSONALITY_MODE=friendly
PERSONALITY_ENABLE_HINDI_ENGLISH=true
PERSONALITY_EMOJI_ENABLED=true
PERSONALITY_MOTIVATIONAL_ENABLED=true
PERSONALITY_HUMOR_ENABLED=true

# v0.9.0 - Daily Intelligence
ENABLE_DAILY_REPORTS=true
DAILY_REPORT_TIME=20:00
DAILY_REPORT_PATH=./data/daily_reports
ENABLE_TREND_ANALYSIS=true
ENABLE_WEALTH_TRACKING=true

# =============================================
# v2.0.0 - AUTONOMOUS MODE SECURITY
# =============================================

# AUTONOMOUS MODE (DANGEROUS - REQUIRES AUTHENTICATION!)
# This mode allows AI to control your PC without human input
# ONLY enable if you understand the risks!
ENABLE_AUTONOMOUS_MODE=false

# Require API key for autonomous operations (HIGHLY RECOMMENDED!)
AUTONOMOUS_REQUIRE_AUTH=true

# Target whitelist (comma-separated domains, empty = validate but don't restrict)
# Example: AUTONOMOUS_ALLOWED_TARGETS=testphp.vulnweb.com,dvwa.local
AUTONOMOUS_ALLOWED_TARGETS=

# Maximum duration for autonomous operation (hours)
AUTONOMOUS_MAX_DURATION=8

# =============================================
# IMPORTANT SECURITY NOTES:
# =============================================
# 1. ALWAYS change AETHER_SECRET_KEY in production
# 2. Keep AUTONOMOUS_REQUIRE_AUTH=true
# 3. Only add trusted domains to AUTONOMOUS_ALLOWED_TARGETS
# 4. Monitor data/control_audit.log for all PC control actions
# 5. Never expose this system to the internet without proper security
# =============================================
